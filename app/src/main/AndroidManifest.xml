<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="project.n01221824.dontforget">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DontForget">
        <activity
            android:name=".Help"
            android:exported="true" />
        <activity
            android:name=".AboutMe"
            android:exported="true" />
        <activity
            android:name=".EditReminder"
            android:exported="true" />
        <activity
            android:name=".ReminderView"
            android:exported="true"
            android:label="@string/title_activity_reminder_view"
            android:theme="@style/Theme.DontForget.NoActionBar" />
        <activity
            android:name=".AddReminder"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>